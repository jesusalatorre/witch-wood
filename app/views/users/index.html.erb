
<%= will_paginate @users, :container => false, renderer: BulmaPagination::Rails, class: "is-centered is-small", next_label: ">", previous_label: "<" %>

<div class="columns">
  <div class="column"></div>

  <div class="column">
    <% @users.each do |user| %>
    <div class="card mt-4">
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-48x48">
              <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
            </figure>
          </div>
          <div class="media-content">
            <p class="title is-4"><%= link_to user.username, user_path(user), class: "is-salmon" %></p>
            <p class="subtitle is-6">@johnsmith</p>
          </div>
        </div>

        <div class="content">
          <p><%= user.about %></p>
          <br>
          <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div class="column"></div>

</div>