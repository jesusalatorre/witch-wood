<div class="columns">
  <div class="column"></div>

  <div class="column">
    <%= render 'shared/errors', obj: @user %>
    <%= form_with(model: @user, class: "control", local: true) do |f| %>

    <div class="field">
      <%= f.label :username, class: "label" %>
      <%= f.text_field :username, class: "input" %>
    </div>

    <div class="field">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, class: "input" %>
    </div>

    <div class="field">
      <%= f.label :about, class: "label" %>
      <%= f.text_area :about, class: "textarea", placeholder: "Tell us about yourself!" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, class: "input" %>
    </div>

    <div class="field">
    <%= f.submit(@user.new_record? ? "Sign Up" : "Update account", class: "button is-primary") %>
    </div>
    <% end %>
  </div>

  <div class="column"></div>
</div>