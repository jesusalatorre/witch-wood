<div class="container"> 
  <div class="columns is-multiline is-mobile">
    <%= @monsters.each do |monster| %>
        <div class="column is-one-quarter">
          
        <!-- Content -->
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-left">
                <figure class="image is-48x48">
                  <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                </figure>
              </div>
              <div class="media-content">
                <h1 class="title"><%= link_to monster.name, monster_path(monster), class: "has-text-dark"%></h1>
                <p class="subtitle"><%= monster.size %> <%= monster.monster_type.downcase %></p>
              </div>
            </div>

      <div class="content">
        <p> <%= truncate(monster.description, length: 50) %></p>
        <br>
        <time>Created <%= time_ago_in_words(monster.created_at)%> ago</time>
      </div>
    </div>
  </div>

        </div>
    <% end %>
  </div>
</div>