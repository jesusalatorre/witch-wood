<!-- Bulma Navbar Example -->
<nav class="navbar has-background-black" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a class="navbar-item" href="<%= root_path %>">
    <span class="icon-text">
      <span class="icon">
        <i class="fas fa-moon"></i>
      </span>
      <span>
        Witchwood
      </span>
    </span>
    </a>

    <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start">
      <a class="navbar-item">
        Explore
      </a>

      <%= link_to "Monsters", monsters_path, class: "navbar-item" %>

      <%= link_to "Users", users_path, class: "navbar-item" %>
    </div>

    <div class="navbar-end">
      <div class="navbar-item">
        <div class="buttons">
          <% if logged_in? %>
          <div class="navbar-item has-dropdown is-hoverable">
            <%= "*" if current_user.admin? %>
            <%= link_to current_user.username, user_path(current_user), class: "navbar-link is-salmon is-arrowless"%>
              <div class="navbar-dropdown is-dark">
              <%= link_to "Edit Profile", edit_user_path(current_user), class: "navbar-item" %>
              <%= link_to "Delete Profile", user_path(current_user), class: "navbar-item", method: [:delete], data: { confirm: "Are you sure? This is permanent." } %>
            </div>
          </div>
          <%= link_to 'Log Out', logout_path, class: "navbar-item", method: [:delete] %>
          <% else %>
          <a class="button is-primary" href="<%= signup_path %>">
            <strong>Sign up</strong>
          </a>
          <a class="button is-light" href="<%= login_path %>">
            Log in
          </a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>